<?xml version="1.0" ?>
<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="cap_brand" resource="default" engine="innodb" comment="Brand Table">
        <column xsi:type="smallint" name="brand_id" padding="6" unsigned="true" nullable="false" identity="true"
                comment="Brand Id"/>
        <column name="title" nullable="true" xsi:type="varchar" comment="Brand Title" length="255"/>
        <column name="category_id" nullable="false" xsi:type="smallint" comment="Brand Category ID"/>
        <column name="attribute_option" nullable="false" xsi:type="smallint" comment="Brand Attribute Option ID"/>
        <column name="is_active" nullable="false" xsi:type="smallint" comment="Is Brand Active" default="1"/>
        <column name="is_featured" nullable="false" xsi:type="smallint" comment="Is Brand Featured" default="0"/>
        <column name="small_image" nullable="true" xsi:type="text" comment="Brand Small Image"/>
        <column name="creation_time" nullable="false" xsi:type="timestamp" comment="Brand Creation Time"
                default="CURRENT_TIMESTAMP"/>
        <column name="update_time" nullable="false" xsi:type="timestamp" comment="Brand Modification Time"
                default="CURRENT_TIMESTAMP" on_update="true"/>
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="brand_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="CAP_BRAND_CATEGORY_ID">
            <column name="category_id"/>
        </constraint>
        <constraint xsi:type="unique" referenceId="CAP_BRAND_ATTRIBUTE_OPTION">
            <column name="attribute_option"/>
        </constraint>
    </table>
</schema>
