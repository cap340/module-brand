<?xml version="1.0"?>
<page layout="1column" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <body>
        <referenceContainer name="product.info.main">
            <block class="Magento\Catalog\Block\Product\View" name="product.brand"
                   ifconfig="cap_brand/product_page_settings/show_brand"
                   template="Cap_Brand::product/view/brand.phtml" before="-">
                <arguments>
                    <argument name="view_model" xsi:type="object">Cap\Brand\ViewModel\Product\View</argument>
                </arguments>
            </block>
        </referenceContainer>
        <referenceContainer name="content.aside">
            <block class="Magento\Catalog\Block\Product\View" name="related.products.brand" ifconfig="cap_brand/product_page_settings/show_related" template="Cap_Brand::product/list/items.phtml">
                <arguments>
                    <argument name="type" xsi:type="string">brand</argument>
                    <argument name="view_model" xsi:type="object">Cap\Brand\ViewModel\Product\View</argument>
                </arguments>
                <block class="Magento\Catalog\Block\Product\ProductList\Item\Container" name="related.product.brand.addto" as="addto">
                    <block class="Magento\Catalog\Block\Product\ProductList\Item\AddTo\Compare"
                           name="related.product.brand.addto.compare" as="compare"
                           template="Magento_Catalog::product/list/addto/compare.phtml"/>
                </block>
            </block>
        </referenceContainer>
    </body>
</page>
